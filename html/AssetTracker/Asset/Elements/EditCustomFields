<%INIT>
my $CustomFields;
my $NamePrefix;
my $Object;

if ($AssetObj) {
 $CustomFields = $AssetObj->CustomFields();
  $NamePrefix = "Object-RTx::AssetTracker::Asset-".$AssetObj->Id."-CustomField-";

  $Object = $AssetObj;

} else {
 $CustomFields = $TypeObj->AssetCustomFields();
  $NamePrefix = "Object-RTx::AssetTracker::Asset--CustomField-";

  $Object = $TypeObj;

}



</%INIT>
