<LABEL ACCESSKEY="9">
<SELECT NAME ="<%$Name%>">
%if ($DefaultValue) {
<OPTION <% !$Default && "SELECTED" %> VALUE=""><%$DefaultLabel%></OPTION>
%}
% foreach my $type (@{$session{'see_in_types'}}) {
<OPTION 
    VALUE="<%($NamedValues ? $type->{'Name'} : $type->{'id'})%>" 
    <%$Default && ($type->{'id'} == $Default) && 'SELECTED'%>>
<%$type->{'Name'}%>
%   if (($Verbose) and ($type->{'Description'}) ){
(<%$type->{'Description'}%>)
%  }
</OPTION>
% }
</SELECT>
</LABEL>

<%INIT>
@{$session{'see_in_types'}} = ();
my $t=new RTx::AssetTracker::Types($session{'CurrentUser'});
$t->UnLimit;
while (my $type=$t->Next) {
        if ($type->CurrentUserHasRight('SeeType')) {
                my $ds = { Name => $type->Name, Description => $type->Description, id => $type->id };
                push (@{$session{'see_in_types'}}, $ds);
        }        
}
</%INIT>


<%ARGS>
$Name => 'Type'
$Verbose =>  0
$Default => 0
$DefaultValue => 1
$DefaultLabel => "-"
$NamedValues => 0
</%ARGS>
